<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VitalVues</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/cef6d9f77d.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="d-flex">
                <!-- Vertical Sidebar -->
                <nav class="sidebar">
                    <a class="sidebar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img class="logo-nav" src="~/images/VVpictures/VV Circular Logo 400.png" />
                    </a>

                    <!-- Line under the logo -->
                    <hr class="sidebar-separator" />

                    <ul class="sidebar-nav">
                        <!-- General Section -->
                        <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a></li>
                        <li><a asp-area="" asp-controller="User" asp-action="UserUpdate"><i class="fas fa-user"></i> Profile</a></li>

                        <!-- Bloodwork and Chat Section -->
                        <hr class="sidebar-separator" />
                        <li><a asp-area="" asp-controller="SubmitBloodwork" asp-action="SubmitBloodwork"><i class="fas fa-vial"></i> Submit Bloodwork</a></li>
                        <li><a asp-controller="BloodworkComparison" asp-action="Comparison"><i class="fas fa-chart-bar"></i> Bloodwork Comparison</a></li>
                        <li><a asp-area="" asp-controller="LetsChat" asp-action="Chat"><i class="fas fa-comments"></i> Chat</a></li>

                        <!-- Activities Section -->
                        <hr class="sidebar-separator" />
                        <li><a asp-area="" asp-controller="Goal" asp-action="Goal"><i class="fas fa-star"></i> Goals</a></li>
                        <li><a asp-area="" asp-controller="Workout" asp-action="Workout"><i class="fas fa-dumbbell"></i> Workouts</a></li>
                        <li><a asp-controller="Meals" asp-action="Meals"><i class="fas fa-utensils"></i> Meals</a></li>
                        <li><a asp-area="" asp-controller="Journals" asp-action="Journal"><i class="fas fa-book"></i> Journals</a></li>
                        <li><a asp-area="" asp-controller="Fasting" asp-action="Fasting"><i class="fas fa-stopwatch"></i> Fasting Timer</a></li>

                        <!-- Support and Logout Section -->
                        <hr class="sidebar-separator" />
                        <li><a asp-area="" asp-controller="About" asp-action="Contact"><i class="fas fa-envelope"></i> Customer Support</a></li>
                        <li><a asp-controller="Payment" asp-action="Payment"><i class="fas fa-credit-card"></i> Payment</a></li>
                        <li class="logout">
                            <a id="qsLogoutBtn" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </li>
                    </ul>
                </nav>

                <!-- Main Content -->
                <div class="container flex-grow-1">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>

        }
    </header>



   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - VitalVues
        </div>
    </footer>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

